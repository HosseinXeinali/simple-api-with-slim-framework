{
    "name": "HosseinXeinali/simple-api-with-slim-framework",
    "description": "a simple api implemented by slim framework",
    "keywords": ["api"],
    "homepage": "https://github.com/HosseinXeinali/simple-api-with-slim-framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Hossein Zeinali",
            "email": "hosseinzeinalii@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "illuminate/database": "~5.1",
        "symfony/validator": "^3.4",
        "doctrine/annotations": "^1.4",
        "slim/twig-view": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "src/classes/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
